<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">
	
	<context:component-scan base-package="com.rm.learn.springmvcanotation"/>

 	<bean id="facebook"
		class="com.rm.learn.springmvcanotation.beans.Facebook" autowire="byName" primary = "true">
	</bean>
	<bean id="whatsapp" 
		class="com.rm.learn.springmvcanotation.beans.Whatsapp" autowire="byName">
	</bean>
	<bean id="service" 
		class="com.rm.learn.springmvcanotation.service.MessagingService" autowire="byType">
	</bean>
		<bean id="binarySearch" 
		class="com.rm.learn.springmvcanotation.controller.MessagingController" autowire="byType" primary = "true">
	</bean>

</beans>